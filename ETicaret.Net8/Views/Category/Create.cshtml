@model Category


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Yeni Kategori Ekle</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger" ></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="form-label"></label>
            <input type="text" class="form-control" asp-for="DisplayOrder" />
        </div>
        <div class="row">
            <div class="col-md-3 px-3">
                <button class="btn btn-outline-dark px-4 mt-3" type="submit">Yeni Kategori Ekle</button>
            </div>
            <div class="col-md-3 px-3">
                <a class="btn btn-outline-secondary px-4 mt-3 mx-3" asp-area="" asp-controller="Category" asp-action="Index">Anasayfa Geri Dön</a>
            </div>
        </div>
       
      
    </div>
</form>