<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETicaret.Net8</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrapmn.css" /> @*Burayı değiştirdim boostrap.min.cssdan değiştirdim (flaty)*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/ETicaret.Net8.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css" />

    

   </head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  text-light  bg-primary border-bottom box-shadow pb-3 mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light mx-2" asp-area="" asp-controller="Home" asp-action="Index"><i class="heading bi bi-cart4 mx-1"></i> E-SepetToptanSatış.com</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ss">
                            <a class="nav-link mx-3" asp-area="Customer" asp-controller="Home" asp-action="Index">ANASAYFA</a>
                        </li>
                        
                        <li>
                            <div class="btn-group bg-primary">
                                <button class="btn btn-light text-light bg-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" data-bs-auto-close="true" aria-expanded="false">
                                    İÇERİK YÖNETİMİ
                                </button>
                                <ul class="dropdown-menu">
                                    <li class="nav-item ">
                                        <a class="nav-link mx-3 text-primary" asp-area="Admin" asp-controller="Category" asp-action="Index">KATEGORİLER</a>
                                    </li>
                                    <li class="nav-item ">
                                        <a class="nav-link mx-3 text-primary" asp-area="Admin" asp-controller="Product" asp-action="Index">ÜRÜNLER</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <partial name="Toastr"></partial>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-center text-light pb-3">
            <i class="bi bi-basket3"></i>  E-SepetToptanSatış.com Ticaret Hizmetiyle Hazırlanmıştır.
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.tiny.cloud/1/7y8m78izvhgh7j1c7cuuazcew6lx578qkfk7jzr8mgyj24x7/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script> @* Buraya ekledim *@
    <script src="//cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
