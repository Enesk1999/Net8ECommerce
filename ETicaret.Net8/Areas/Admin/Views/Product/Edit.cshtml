    </div>
    <div class="col-md-4 py-5">
        <div class="border-3 border-dark shadow">
            <img style="object-fit:cover;" src="@Model.ImageUrl" alt="Alternate Text" width="400" height="400" />
        </div>
      
    </div>
</div>





@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
