        <div class="form-floating mb-3">
            <input type="text" class="form-control border-0 shadow" asp-for="ListPrice" />
            <label asp-for="ListPrice" class="form-label ms-2"></label>
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control border-0 shadow" asp-for="Price" />
            <label asp-for="Price" class="form-label ms-2"></label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control border-0 shadow" asp-for="Price50" />
            <label asp-for="Price50" class="form-label ms-2"></label>
            <span asp-validation-for="Price50" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control border-0 shadow" asp-for="Price100" />
            <label asp-for="Price100" class="form-label ms-2"></label>
            <span asp-validation-for="Price100" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <select class="form-select border-0 shadow my-2" asp-for="CategoryId" asp-items="@ViewBag.CategoryId">
                <option disabled>Lütfen Kategori Seçiniz</option>
            </select>
            <label asp-for="CategoryId" class="form-label ms-2"></label>


        </div>
        <div class="form-floating mb-3">
            <input type="file" name="fileUrl" class="form-control border-0 shadow" asp-for="ImageUrl" />
            <label asp-for="ImageUrl" class="form-label ms-2"></label>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-3 px-3">
                <button class="btn  btn-outline-primary px-3 mt-3" type="submit">Ürün Güncelle</button>
            </div>
            <div class="col-md-3 px-3">
                <a class="btn btn-outline-dark px-1 mt-3 mx-3" asp-area="Admin" asp-controller="Product" asp-action="Index">Anasayfa Geri Dön</a>
            </div>
