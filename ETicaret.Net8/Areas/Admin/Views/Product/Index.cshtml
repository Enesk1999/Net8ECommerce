@using ETicaret.Model.Models
@model IEnumerable<Product>


<div class="container py-5">
    <div class="row mb-4 py-2">
        <div class="col-md-6">
            <h2 class="fw-bold fs-1 text-secondary">Ürünler Listesi</h2>
        </div>
        <div class="text-end py-2">
            <a class="btn btn-outline-secondary py-2" asp-area="Admin" asp-controller="Product" asp-action="Create"><i class="bi bi-plus-circle"></i>  Yeni Ürün Ekle</a>
        </div>
    </div>
    @if(Model !=null && Model.Any())
    {
        <table class="table table-hover table-bordered table-striped py-4">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>ListPrice</th>
                    <th>Price</th>
                    <th>Price50</th>
                    <th>Price100</th>
                    <th>CategoryId</th>
                    <th>ImageUrl</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(x=>x.Price))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.ISBN</td>
                        <td>@item.Author</td>
                        <td>@item.ListPrice</td>
                        <td>@item.Price</td>
                        <td>@item.Price50</td>
                        <td>@item.Price100</td>
                        <td></td>
                        <td>@item.ImageUrl</td>
                        <td>
                            <div class="w-75 btn-group role=group">
                                <a class="btn btn-outline-dark mx-3" asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square mx-2"></i>Ürünü Düzenle</a>
                                <a class="btn btn-outline-danger mx-3" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash mx-2"></i>Ürünü Kaldır</a>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3 class="text-danger">veri yok..</h3>
    }
</div>